<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"> <button class="btn btn-sucess">Nova postagem</button> </a>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h4> {{titulo}} </h4>
            <p>descrição: {{descricao}} </p>
            <small>data: {{data}} </small>
            <small>categoria: {{categoria.nome}} </small><br>
            <a href="/adimin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
            <a href="/adimin/postagens/deletar/{{_id}}"><button class="btn btn-success mt-3">deletar postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}